<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.Fragment1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:id="@+id/rv_main"
        android:background="@drawable/border_radius">

        <LinearLayout
            android:id="@+id/DateNow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Hari ini"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="22 Mei 2019"
                    android:textSize="@dimen/_15sdp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/line_grey" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_main_today"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/DateNow"
            android:layout_margin="@dimen/_7sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="100dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_main_pengeluaran"
                    android:layout_width="@dimen/_125sdp"
                    android:layout_height="wrap_content"
                    android:text="Pengeluaran"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="18dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:text=":"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="18dp"
                    android:layout_toRightOf="@id/tv_main_pengeluaran"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:id="@+id/tv_rp_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. "
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="18dp"/>
                    <TextView
                        android:id="@+id/UangKeluar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="20000"
                        android:textSize="18dp"
                        android:layout_toRightOf="@id/tv_rp_main"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_main_pemasukan"
                    android:layout_width="@dimen/_125sdp"
                    android:layout_height="wrap_content"
                    android:text="Pengeluaran"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="18dp"
                    android:textColor="@color/Theme"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:text=":"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/Theme"
                    android:textSize="18dp"
                    android:layout_toRightOf="@id/tv_main_pemasukan"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:id="@+id/tv_rp_main2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. "
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/Theme"
                        android:textSize="18dp"/>
                    <TextView
                        android:id="@+id/UangMasuk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="0"
                        android:textColor="@color/Theme"
                        android:textSize="18dp"
                        android:layout_toRightOf="@id/tv_rp_main2"/>
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|end"
            app:elevation="0dp"
            android:backgroundTint="@color/Theme"
            android:src="@drawable/add" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_alignParentRight="true"
            app:elevation="0dp"
            android:layout_above="@id/fab1"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/Theme"
            android:visibility="gone"
            android:src="@drawable/ic_unfold_less24dp"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_alignParentRight="true"
            app:elevation="0dp"
            android:layout_above="@id/fab2"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/Theme"
            android:src="@drawable/ic_list_kategori24dp"
            android:visibility="gone"
            />


    </RelativeLayout>


</RelativeLayout>