<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailRiwayat">

    <include layout="@layout/header2"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp" >

        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_radius"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hari ini, 19 Mei 2020"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"/>

            <RelativeLayout
                android:id="@+id/rl_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_date"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/lunch"/>

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Makan"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_icon"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_desc"
                    android:gravity="end"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp."
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="20.000,00"
                        android:textSize="20sp"/>

                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@drawable/line"
                android:layout_below="@id/rl_2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <RelativeLayout
                android:id="@+id/rl_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_line"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/iv_icon_2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/logo"/>

                <TextView
                    android:id="@+id/tv_desc_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nemu Rejeki"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_icon_2"
                    android:textStyle="bold"
                    android:textColor="@color/Theme"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_desc_2"
                    android:gravity="end"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp."
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/Theme"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="5.000.000,00"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/Theme"/>

                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_line_2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@drawable/line"
                android:layout_below="@id/rl_3"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <RelativeLayout
                android:id="@+id/rl_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_line_2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/iv_icon_3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/lunch"/>

                <TextView
                    android:id="@+id/tv_desc_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bensin"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_icon_3"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_desc_3"
                    android:gravity="end"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp."
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="20.000,00"
                        android:textSize="20sp"/>

                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@drawable/line"
                android:layout_below="@id/rl_2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>